{
    "openapi": "3.0.0",
    "info": {
        "title": "TMDB Client Nodejs API",
        "description": "API for TMDB Client application's Backend",
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "http://{host}:{port}",
            "description": "local server",
            "variables": {
                "host": {
                    "default": "localhost",
                    "description": "points to the application running locally"
                },
                "port": {
                    "default": "8080"
                }
            }
        }
    ],
    "components": {
        "schemas": {
            "$ref": "./schemas/index.json"
        },
        "responses": {
            "$ref": "./responses/index.json"
        }
    },
    "security": [
        {
            "bearerAuth": []
        }
    ],
    "paths": {
        "$ref": "./paths/index.json"
    }
}